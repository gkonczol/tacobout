<h1>Write A Review! </h1>
<%= @user.username %>
<%= form_for(@review) do |f| %>
  
  <p>this is a review for a:</p>
  <%= f.radio_button :type, "shop", :checked => false  %>
  <%= f.label("shop") %>
   <%= f.radio_button :type, "taco", :checked => false  %>
   <%= f.label("taco") %>
  <br />
  <p>rating:</p>
  <%= f.radio_button :rating, 1, :checked => false  %>
  <%= f.label(1) %>
  <%= f.radio_button :rating, 2, :checked => false  %>
  <%= f.label(2) %>
  <%= f.radio_button :rating, 3, :checked => false  %>
  <%= f.label(3) %>
  <%= f.radio_button :rating, 4, :checked => false  %>
  <%= f.label(4) %>
  <%= f.radio_button :rating, 5, :checked => false  %>
  <%= f.label(5) %>
  <br />
  <%= f.label("Comments:") %>
  <br />
  <%= f.text_area :comment %>
  <br />
  <%= f.submit %>
<% end %>
